load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "main.go",
        "root_cgo_darwin.go",
        "root_darwin.go",
    ],
    cgo = True,
    clinkopts = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "-framework CoreFoundation -framework Security",
        ],
        "//conditions:default": [],
    }),
    copts = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "-mmacosx-version-min=10.10 -D__MAC_OS_X_VERSION_MAX_ALLOWED=101300",
        ],
        "//conditions:default": [],
    }),
    importmap = "github.com/example/project/vendor/golang.org/x/exp/cmd/macos-roots-test",
    importpath = "golang.org/x/exp/cmd/macos-roots-test",
